    <script>
        function generateKelompokList(jumlahKelompok) {
            var kelompokList = document.getElementById("kelompok-list");
            kelompokList.innerHTML = ""; // Kosongkan list sebelum menambahkan kelompok baru
            if (!isNaN(jumlahKelompok) && jumlahKelompok > 0) {
                for (var i = 1; i <= jumlahKelompok; i++) {
                    var li = document.createElement("li");
                    li.innerHTML = "Kelompok " + i + `<i class="fa-solid fa-square-minus ml-2 text-red-500 cursor-pointer" onclick="removeKelompok(this)"></i>`;
                    kelompokList.appendChild(li);
                }
            } else {
                kelompokList.innerHTML = "<li>Input tidak valid</li>";
            }
        }

        function removeKelompok(element) {
            var parentLi = element.parentNode;
            parentLi.remove();
        }
    </script>

<script>
    function selectRandomGroup() {
        var kelompokList = document.getElementById("kelompok-list");
        var listItems = kelompokList.getElementsByTagName("li");
        var randomIndex = Math.floor(Math.random() * listItems.length);

        // Hilangkan semua pemilihan sebelumnya
        for (var i = 0; i < listItems.length; i++) {
            listItems[i].classList.remove("selected", "animate__animated", "animate__headShake");
        }

        // Tandai kelompok yang dipilih secara acak
        listItems[randomIndex].classList.add("selected", "animate__animated", "animate__headShake");


        // Ambil nama kelompok yang terpilih
        var selectedGroupName = listItems[randomIndex].innerText;

        // Tampilkan nama kelompok yang terpilih dalam alert
        alert("Kelompok yang terpilih: " + selectedGroupName);

        // Memulai efek confetti
        startConfetti();
    }


    // Fungsi untuk memulai efek confetti
    function startConfetti() {
        // Memainkan audio confetti
        var confettiSound = document.getElementById("confetti-sound");
        confettiSound.play();

        // Memulai efek confetti
        var confettiSettings = { target: 'confetti-canvas' };
        var confetti = new ConfettiGenerator(confettiSettings);
        confetti.render();
        
        // Berhenti setelah beberapa detik
        setTimeout(function() {
            confetti.clear();
            // Hentikan audio confetti setelah efek selesai
            confettiSound.pause();
            confettiSound.currentTime = 0; // Kembalikan ke posisi awal untuk persiapan pemutaran berikutnya
        }, 15000);
    }
</script>



    <script>
      const texts = [
        "Hi, Sobat.",
        "Selamat datang",
        "di website kami",
      ]; // Teks yang akan ditampilkan
      let count = 0; // Indeks teks yang sedang ditampilkan
      let index = 0; // Indeks huruf dalam teks
      let currentText = ""; // Teks yang sedang ditampilkan
      let letter = ""; // Huruf yang sedang ditampilkan

      (function type() {
        if (count === texts.length) {
          count = 0; // Jika semua teks telah ditampilkan, kembalikan ke teks pertama
        }
        currentText = texts[count];
        letter = currentText.slice(0, ++index);

        document.getElementById("typed-text").textContent = letter;
        if (letter.length === currentText.length) {
          count++;
          index = 0;
          setTimeout(type, 2000); // Setelah menunggu selama 2 detik, lanjutkan ke teks berikutnya
        } else {
          setTimeout(type, 100); // Beri jeda sebelum menampilkan huruf berikutnya
        }
      })();
    </script>


    <script>
      function smoothScroll(event) {
        event.preventDefault();
        const targetId = event.currentTarget.getAttribute('href').substring(1);
        const targetElement = document.getElementById(targetId);
        const yOffset = -50; // Sesuaikan offset scroll jika perlu
        const y = targetElement.getBoundingClientRect().top + window.pageYOffset + yOffset;
        window.scrollTo({top: y, behavior: 'smooth'});
      }
    </script>

